    public boolean clip(NumberLine%name%Mask other) {
        if (ranges.isEmpty())
            return false;

        if (other.isEmpty()) {
            ranges.clear();
            return true;
        }

        %type% minA = ranges.firstEntry().getValue().min;
        %type% minB = other.ranges.firstEntry().getValue().min;
        %type% maxA = ranges.lastEntry().getValue().max;
        %type% maxB = other.ranges.lastEntry().getValue().max;
        %type% min = minA < minB ? minA : minB;
        %type% max = maxA > maxB ? maxA : maxB;
        NumberLine%name%Mask scratch = new NumberLine%name%Mask();
        scratch.add(min, max);
        scratch.subtract(other);
        return subtract(scratch);
