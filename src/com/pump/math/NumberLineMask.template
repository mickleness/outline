        Map.Entry<%name%, Range%name%> floorEntry = ranges.floorEntry(%box%(min));

        Iterator<Range%name%> iter;
        if (floorEntry == null) {
            iter = ranges.values().iterator();
        } else {
            iter = ranges.tailMap(floorEntry.getKey()).values().iterator();
        }
        while (iter.hasNext()) {
            Range%name% range = iter.next();
            if (range.intersects(min, max))
                return true;
            if (range.max > max)
                break;
        }
