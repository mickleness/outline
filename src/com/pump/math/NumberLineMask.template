                    if (addLeftEdge) {
                        ranges.put(existingRange.min, new Range%name%(existingRange.min, range.min));
                    }
                    if (addRightEdge) {
                        ranges.put(range.max, new Range%name%(range.max, existingRange.max));
                    }
